    <a:statusbar name="statusbar">
        <a:style><![CDATA[
            .ipad_statusbar {
                border-top : 1px solid #cccccc;
                overflow   : hidden;
                color      : #4b4b4b;
                background : url(images/ipad_bar_small_backg.png) repeat-x top left;
                height     : 44px;
                width      : 100%;
                overflow   : hidden;
                position   : absolute;
                bottom     : 0;
                padding    : 0;
            }
        
            .ipad_statusbar .ipad_sbsection {
                padding      : 0 5px 0 5px;
                font-size    : 11px;
                font-family  : Tahoma;
                background   : no-repeat 3px 1px;
                height       : 44px;
                float        : left;
                margin       : 2px 0 0 0;
                border-right : 1px solid #c3c3c3;
                border-left  : 1px solid #FFFFFF;
                position     : relative;
            }
            
            .ipad_statusbar .ipad_sbsectionLast {
                float        : none;
                margin       : 0 0 0 0;
                border-right : 0;
                position     : relative;
                overflow     : hidden;
            }
            
            .ipad_statusbar .ipad_sbsectionIcon {
                padding-left : 23px
            }
            
            .windowMax .ipad_statusbar .ipad_corner {
                display : none;
            }
        
            .ipad_statusbar .ipad_corner {
                width    : 13px;
                height   : 13px;
                position : absolute;
                right    : 0;
                top      : 7px;
                display  : block;
            }
            
            .sbbare {
                position   : relative;
                border-top : 0;
            }
        ]]></a:style>
    
        <a:presentation>
            <a:main container="." corner="span" minheight="44" maxheight="44">
                <div class='ipad_statusbar'>
                    <span class='ipad_corner'></span>
                </div>
            </a:main>
            <a:section icon="." caption="text()" container="." inherit="true">
                <div class='ipad_sbsection'> </div>
            </a:section>
        </a:presentation>
    </a:statusbar>
</a:skin>